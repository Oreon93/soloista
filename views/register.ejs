<section class="section-narrow container-fluid">

  <div class="col-lg-4 col-md-6 col-sm-8 mx-auto text-center">
      <h2 class="message">Create your account</h2>
      <p class="sign-up-text">Create your account in a beat! Or <a href="login">sign in</a> if you already have one.</p>
    <form class="login-form" action="/register" method="POST">
      <input class="login-input" type="text" name="firstname" placeholder="Your first name">
      <input class="login-input" type="text" name="email" placeholder="E-mail">
      <input class="login-input" type="password" name="password" placeholder="Password">
      <input class="login-input" type="password" placeholder="Confirm password">
      <input class="login-input" type="text" name="mobile" placeholder="Mobile number">
      <button class="btn btn-primary home-primary-btn btn-block ">Create account</button>
    </form>
  </div>
</section>
