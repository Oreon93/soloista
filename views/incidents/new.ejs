<section class="d-flex breadcrumbs container-fluid section-narrow">
  <div class="breadcrumbs-items d-flex align-items-center justify-content-between">
    <p><a href="/">Home</a> &gt; <a href="/account/bookings">My account</a> &gt; Report an issue </p>
  </div>
</section>
<section class="section-block container">
  <div class="col-6 mx-auto">
    <h1 class="text-center pb-3">Report an issue<h1>

    <form  method="POST" action="/bookings/<%= booking.id %>/incidents">
      <div class="form-row form-group">
        <textarea class="form-control" type="text" placeholder="Report an issue with the room here." name="incident[text]"></textarea>
      </div>
      <button style="display: block; margin: 0 auto" class="btn btn-submit btn-secondary" type="submit">Report</button>
    </form>
  </div>
</section>

